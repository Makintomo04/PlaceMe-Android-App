<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/tempLogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="26dp"
        app:srcCompat="@drawable/placement_logo" />

    <TextView
        android:id="@+id/placementTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/closingDate"
        android:layout_alignTop="@+id/tempLogo"
        android:layout_alignRight="@+id/favorite"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="33dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingRight="40dp"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/companyName"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/placementTitle"
        android:layout_alignRight="@+id/placementTitle"
        android:layout_alignParentTop="true"
        android:layout_marginTop="58dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/closingDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tempLogo"
        android:layout_alignLeft="@+id/companyName"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="0dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/location"
        android:layout_alignLeft="@+id/location"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="8dp"
        android:text="Competitive" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/placementTitle"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="109dp"
        android:text="Placement Year" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/typeImg"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="-2dp"
        android:layout_toEndOf="@+id/imageView4"
        android:layout_toRightOf="@+id/imageView4"
        android:text="Somewhere in UK" />

    <ImageView
        android:id="@+id/favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/placementTitle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        app:srcCompat="@drawable/favorite_empty" />

    <ImageView
        android:id="@+id/deadline"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="88dp"
        app:srcCompat="@drawable/calendar" />

    <ImageView
        android:id="@+id/typeImg"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignLeft="@+id/placementTitle"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="112dp"
        app:srcCompat="@drawable/work" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignBottom="@+id/closingDate"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="114dp"
        android:layout_marginRight="114dp"
        android:layout_marginBottom="4dp"
        app:srcCompat="@drawable/pound" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignTop="@+id/type"
        android:layout_alignRight="@+id/imageView3"
        android:layout_marginTop="5dp"
        android:layout_marginRight="0dp"
        app:srcCompat="@drawable/location" />

</RelativeLayout>